class ShowExposure(HandlerBase):
    
    def prevnext( self, state, numobjs ):
        nextarr = []
        prevarr = []
        nextord = self.idordinal
        prevord = nextord + 1
        self.idordinal += 2
        for key in state:
            if key=="offset":
                value = int(state["offset"]) + int(state["numperpage"])
            else:
                value = state[key]
            nextarr.append( form.Hidden( key, value=value, id="{}{}".format(key, nextord) ) )
            if key=="offset":
                value = int(state["offset"]) - int(state["numperpage"])
                value = value if value > 0 else 0
            prevarr.append( form.Hidden( key, value=value, id="{}{}".format(key, prevord) ) )
        nextarr.append( form.Button( name="Next {}".format( state["numperpage"] ),
                                     id="Next_{}.{}".format( state["numperpage"], self.idordinal ),
                                     html="Next {}".format( state["numperpage"] ),
